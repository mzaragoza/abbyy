= simple_form_for(client, html: {class: 'form-horizontal clearfix', novalidate: true}) do |f|
  = f.input :company_name
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.input :phone
  = f.input :extention
  = f.input :fax
  = f.input :cell
  = f.input :address
  = f.input :city
  = f.input :state
  = f.input :zipcode
  = f.input :facebook
  = f.input :linkedin
  = f.input :tweeter
  = f.input :website
  = f.input :business_card
  = f.button :submit, class: 'btn btn-primary btn-large pull-right', disable_with: 'Creating...'
